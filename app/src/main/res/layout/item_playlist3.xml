<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/layout_ch_list"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#88000000"
                                    android:layout_margin="2dp"
                                    app:cardBackgroundColor="#88000000"
                                    app:cardElevation="2.0dip"
                                    app:cardUseCompatPadding="true">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:background="@android:color/transparent">
        <ImageView android:id="@+id/iv_channel" android:layout_gravity="center_horizontal"
                   android:src="@drawable/placeholder" android:layout_width="125dp"
                   android:scaleType="centerInside"
                   android:layout_height="125dp"/>
        <TextView android:layout_width="match_parent" android:layout_height="45dp" android:textSize="13.0sp"
                  android:textColor="@android:color/background_light"
                  android:gravity="center" android:layout_gravity="bottom|center"
                  android:id="@+id/item_name" android:background="#99000000" android:padding="4dp"
                  android:paddingBottom="5.0dip"
                  android:text="CHANNEL NAME CHANNEL NAME 23344343" android:lines="2"/>

    </LinearLayout>
</android.support.v7.widget.CardView>

