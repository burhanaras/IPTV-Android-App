<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/layout_ch_list"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="4dp">
    <android.support.v7.widget.CardView android:layout_gravity="center" android:id="@+id/cardview"
                                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        app:cardBackgroundColor="#88000000" app:cardElevation="0.0dip"
                                        app:cardUseCompatPadding="true">
        <FrameLayout android:background="@color/gray" android:layout_width="fill_parent"
                     android:layout_height="fill_parent">
            <ImageView android:layout_gravity="top" android:id="@+id/iv_channel" android:layout_width="125.0dip"
                       android:layout_height="125.0dip" android:layout_marginBottom="45.0dip"
                       android:src="@drawable/placeholder"
                       android:scaleType="centerCrop"/>
            <TextView android:textSize="13.0sp" android:textColor="@android:color/background_light"
                      android:gravity="center" android:layout_gravity="bottom|center"
                      android:id="@+id/item_name" android:background="#99000000" android:padding="4dp"
                      android:paddingBottom="5.0dip" android:layout_width="125.0dip" android:layout_height="45.0dip"
                      android:text="CHANNEL NAME CHANNEL NAME 23344343" android:lines="2"/>
            <ImageView android:layout_gravity="center|right|top" android:id="@+id/img_fav"
                       android:background="@android:drawable/btn_star_big_on" android:layout_width="fill_parent"
                       android:visibility="gone"
                       android:layout_height="fill_parent"/>
        </FrameLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>